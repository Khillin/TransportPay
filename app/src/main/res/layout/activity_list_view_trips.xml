<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListView_Trips">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        android:background="@drawable/view_trips_box"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Party Name"
                        android:textSize="10sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/party_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Sharma Tech"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/trip_status_bg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_circle"
                        android:layout_gravity="center_vertical"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/trip_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:padding="5dp"
                        android:text="LR Recieved"
                        android:textColor="#2AA369"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/underline"
                android:layout_marginVertical="5dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:id="@+id/origin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorTextPrimary"
                        android:foregroundGravity="center_vertical"
                        android:text="Origin" />

                    <TextView
                        android:id="@+id/origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorTextPrimary"
                        android:foregroundGravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Mumbai" />

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/colorTextPrimary"
                        android:padding="5dp"
                        android:foregroundGravity="center_vertical"
                        android:text="12-04-1996" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_1"
                    android:layout_width="166dp"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/origin_layout"
                    android:background="@drawable/arrow1" />

                <ImageView
                    android:id="@+id/vector_27"
                    android:layout_width="3.5dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="26.5dp"
                    android:layout_toRightOf="@+id/arrow_1"
                    android:background="@drawable/arrow_mark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:foregroundGravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorTextPrimary"
                        android:foregroundGravity="center_vertical"
                        android:text="Destination" />

                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorTextPrimary"
                        android:foregroundGravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Hyderabad" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/underline"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="italic"
                android:text="upload documents for this trip in details"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>